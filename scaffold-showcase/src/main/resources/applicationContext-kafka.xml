<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="messageProducer" class="com.andyadc.scaffold.middleware.kafka.KakfaMessageProducer">
        <property name="defaultAppId" value="showcash"/>
        <property name="bootstrapServers" value="${kafka.bootstrapServers}"/>
    </bean>

    <bean id="messagePoller" class="com.andyadc.scaffold.middleware.kafka.MessagePoller">
        <property name="bootstrapServers" value="${kafka.bootstrapServers}"/>
        <property name="pollTimeout" value="100000"/>
        <property name="topics" value="test"/>
        <property name="groupId" value="mygroup"/>
    </bean>
</beans>